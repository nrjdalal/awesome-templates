{
  "name": "awesometemplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "drizzle": "bun --env-file=.env.development drizzle-kit push",
    "drizzle:prod": "bun --env-file=.env.production drizzle-kit push",
    "format": "biome format --write",
    "lint": "biome check",
    "prepare": "npx simple-git-hooks",
    "start": "next start",
    "studio": "bun --env-file=.env.development drizzle-kit studio",
    "studio:prod": "bun --env-file=.env.production drizzle-kit studio"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --verbose",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "biome format --write"
    ],
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@remixicon/react": "^4.7.0",
    "@tanstack/react-form": "^1.23.8",
    "@tanstack/react-query": "^5.90.5",
    "better-auth": "^1.3.30",
    "class-variance-authority": "^0.7.1",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.548.0",
    "next": "^16.0.0",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.2.2",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@fontsource-variable/dm-sans": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.5",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "sort-package-json": "^3.4.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
